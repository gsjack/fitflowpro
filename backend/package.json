{
  "name": "fitflow-backend",
  "version": "1.0.0",
  "description": "FitFlow Pro - Evidence-Based Training Backend API",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "tap",
    "test:unit": "tap 'tests/unit/**/*.test.ts'",
    "test:contract": "tap 'tests/contract/**/*.test.ts'",
    "test:integration": "tap 'tests/integration/**/*.test.ts'",
    "test:performance": "tap 'tests/performance/**/*.test.ts'",
    "test:coverage": "tap --coverage-report=lcov",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "fitness",
    "training",
    "renaissance-periodization",
    "hypertrophy"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@esbuild/linux-arm64": "^0.25.10",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.0.0",
    "fastify": "^4.26.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.19",
    "@types/tap": "^15.0.11",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tap": "^18.7.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
